@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<h1>@ViewData["Title"]</h1>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="card">
    <div class="header">
        <p class="lead">@ViewData["Title"]</p>
    </div>
    <div class="body">
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg btn-block"><i class="fav-note fa-sign-in"></i><span>Sign In</span>   </a>
    </div>
</div>
