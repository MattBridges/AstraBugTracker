                                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.EndDate)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.ProjectPriority)</th>
